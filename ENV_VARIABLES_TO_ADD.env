# =============================================================================
# Environment Variables to Add to .env File
# =============================================================================
# 
# أضف هذه المتغيرات إلى ملف .env على السيرفر:
# /public_html/mediaprosocial.io/.env
#
# ملاحظة: استبدل القيم الوهمية بالقيم الحقيقية عندما تحصل على API Keys
# =============================================================================

# =============================================================================
# WEBHOOK SYSTEM CONFIGURATION
# =============================================================================

# Pabbly Connect Webhook URL (احصل عليه من Pabbly Connect)
PABBLY_WEBHOOK_URL=https://connect.pabbly.com/webhook/YOUR_WEBHOOK_ID

# Webhook Security Secret (أنشئ مفتاح آمن)
WEBHOOK_SECRET=your_secure_webhook_secret_key_here

# Webhook Retry Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=60

# =============================================================================
# AI VIDEO GENERATION APIs
# =============================================================================

# Runway ML API Key (https://runwayml.com/)
RUNWAY_API_KEY=your_runway_api_key_here

# Pika Labs API Key (https://pika.art/)
PIKA_API_KEY=your_pika_api_key_here

# D-ID API Key (https://www.d-id.com/)
DID_API_KEY=your_d_id_api_key_here

# Stability AI API Key (https://platform.stability.ai/)
STABILITY_API_KEY=your_stability_api_key_here

# Default AI Video Provider (runway|pika|d-id|stability)
DEFAULT_AI_VIDEO_PROVIDER=runway

# AI Video Generation Limits
AI_VIDEO_DAILY_LIMIT_FREE=5
AI_VIDEO_DAILY_LIMIT_PREMIUM=50
AI_VIDEO_MONTHLY_LIMIT_FREE=50
AI_VIDEO_MONTHLY_LIMIT_PREMIUM=500

# =============================================================================
# QUEUE SYSTEM CONFIGURATION
# =============================================================================

# Queue Connection (استخدم database للبساطة)
QUEUE_CONNECTION=database

# Failed Jobs Storage
QUEUE_FAILED_DRIVER=database

# Queue Worker Settings
QUEUE_WORKER_SLEEP=3
QUEUE_WORKER_TRIES=3
QUEUE_WORKER_TIMEOUT=90

# =============================================================================
# AUTOMATION SYSTEM CONFIGURATION
# =============================================================================

# Automation System Enable/Disable
AUTOMATION_ENABLED=true

# Automation Limits per User
MAX_AUTOMATION_RULES_PER_USER=10
MAX_SCHEDULED_POSTS_PER_DAY=50

# Automation Execution Interval (minutes)
AUTOMATION_CHECK_INTERVAL=5

# =============================================================================
# SOCIAL MEDIA APIs (اختياري - للمستقبل)
# =============================================================================

# Facebook App Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Twitter API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok API
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# =============================================================================
# ALTERNATIVE PUBLISHING SERVICE (Ayrshare)
# =============================================================================

# Ayrshare API Key (بديل للـ Social Media APIs الفردية)
AYRSHARE_API_KEY=your_ayrshare_api_key_here

# Ayrshare Base URL
AYRSHARE_BASE_URL=https://app.ayrshare.com/api

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Enhanced Logging for New Features
LOG_WEBHOOK_REQUESTS=true
LOG_AI_VIDEO_GENERATION=true
LOG_AUTOMATION_EXECUTION=true

# Log Retention (days)
LOG_RETENTION_DAYS=30

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# SECURITY ENHANCEMENTS
# =============================================================================

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Session Security
SESSION_SECURE_COOKIES=true
SESSION_HTTP_ONLY=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles (true/false)
FEATURE_WEBHOOK_SYSTEM=true
FEATURE_AI_VIDEO_GENERATION=true
FEATURE_AUTOMATION_SYSTEM=true
FEATURE_SOCIAL_MEDIA_PUBLISHING=true

# Beta Features (للاختبار)
BETA_FEATURES_ENABLED=false

# =============================================================================
# DEVELOPMENT/PRODUCTION FLAGS
# =============================================================================

# Debug Mode for New Features (false في الإنتاج)
APP_DEBUG_WEBHOOK=false
APP_DEBUG_AI_VIDEO=false
APP_DEBUG_AUTOMATION=false

# Testing Mode
TESTING_MODE=false

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# Maintenance Mode Messages
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Cache Configuration for New Features
CACHE_AI_VIDEO_RESULTS=true
CACHE_AUTOMATION_RULES=true
CACHE_WEBHOOK_RESPONSES=false

# Cache TTL (Time To Live in seconds)
CACHE_TTL_AI_VIDEO=3600
CACHE_TTL_AUTOMATION=1800

# =============================================================================
# NOTIFICATION SYSTEM
# =============================================================================

# Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=true

# SMS Notifications (اختياري)
SMS_NOTIFICATIONS_ENABLED=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# كيفية الاستخدام:
# 1. انسخ هذه المتغيرات
# 2. أضفها في نهاية ملف .env الموجود على السيرفر
# 3. استبدل القيم الوهمية بالقيم الحقيقية
# 4. شغّل: php artisan config:clear
# 5. شغّل: php artisan config:cache

# المطلوب فوراً للبدء:
# - PABBLY_WEBHOOK_URL (من Pabbly Connect)
# - WEBHOOK_SECRET (أي مفتاح آمن)
# - واحد على الأقل من AI Video APIs

# باقي المتغيرات اختيارية ويمكن إضافتها لاحقاً

# =============================================================================